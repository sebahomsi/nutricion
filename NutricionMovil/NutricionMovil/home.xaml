<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NutricionMovil.home">
    <ContentPage.Content>
        <StackLayout Padding="10" BackgroundColor="#C2D8FA" >
            <Label Text="Lista de pacientes:" FontSize="Large"/>
            <ListView x:Name="ListaPaciente">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextCell Text="{Binding ApyNom}" TextColor="Black"/>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>