        </p>


        <p class="info-style">
            @Html.DisplayNameFor(model => model.Eliminado):
            <span class="sub-info">
                @Html.DisplayFor(model => model.EliminadoStr)
                </span>
        </p>
    </div>
    


        


</div>
<p style="margin-top: 15px;">
    @Html.ActionLink("Actualizar", "Edit", new { id = Model.Id }, new { @class = "btn btn-warning" })
    @Html.ActionLink("Volver", "Index", new { }, new { @class = "btn btn-default" })
    @Html.ActionLink("Ir al Paciente", "Details","Paciente", new { id = Model.PacienteId }, new { @class = "btn btn-info" })

</p>

    <hr />

    <p>@Html.ActionLink("Agregar Patologia", "Create", "ObservacionPatologia", new { observacionId = Model.Id }, new { @class = "btn btn-primary" }) </p>

    <table class="table">
        <tr class="cabecera-tabla">
            <th>
                @Html.DisplayNameFor(model => model.Patologias.FirstOrDefault().Codigo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Patologias.FirstOrDefault().Descripcion)
            </th>



            <th></th>
        </tr>

        @foreach (var item in Model.Patologias)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Codigo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Descripcion)
                </td>
                <td align="right">
                    @Html.ActionLink("Eliminar", "Delete", "ObservacionPatologia", new { observacionId = Model.Id, patologiaId = item.Id }, new { @class = "btn btn-danger" })
                </td>


            </tr>
        }

    </table>

    <hr />

    <p>@Html.ActionLink("Agregar Alergia/Intolerancia", "Create", "ObservacionAlergiaIntolerancia", new { observacionId = Model.Id }, new { @class = "btn btn-primary" }) </p>


    <table class="table">
        <tr class="cabecera-tabla">
            <th>
                @Html.DisplayNameFor(model => model.AlergiasIntolerancias.FirstOrDefault().Codigo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AlergiasIntolerancias.FirstOrDefault().Descripcion)
            </th>



            <th></th>
        </tr>

        @foreach (var item in Model.AlergiasIntolerancias)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Codigo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Descripcion)
                </td>
                <td align="right">
                    @Html.ActionLink("Eliminar", "Delete", "ObservacionAlergiaIntolerancia", new { observacionId = Model.Id, alergiaId = item.Id }, new { @class = "btn btn-danger" })

                </td>

            </tr>
        }

    </table>

    <hr />

    <p>@Html.ActionLink("Agregar Alimento Rechazado", "Create", "ObservacionAlimento", new { observacionId = Model.Id }, new { @class = "btn btn-primary" }) </p>


    <table class="table">
        <tr class="cabecera-tabla">
            <th>
                @Html.DisplayNameFor(model => model.Alimentos.FirstOrDefault().Codigo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Alimentos.FirstOrDefault().Descripcion)
            </th>



            <th></th>
        </tr>

        @foreach (var item in Model.Alimentos)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Codigo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Descripcion)
                </td>
                <td align="right">
                    @Html.ActionLink("Eliminar", "Delete", "ObservacionAlimento", new { observacionId = Model.Id, alimentoId = item.Id }, new { @class = "btn btn-danger" })

