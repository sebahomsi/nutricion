@model NutricionWeb.Models.Observacion.ObservacionViewModel

@{
    ViewBag.Title = "Observación";
}

<div class="titulo-ABM">
    <h4 class="detail-h4">Observaciones del Paciente</h4>
</div>

<div class="row">
    <hr />
    <div class="col-md-7">
        <p class="info-style">
            @Html.DisplayNameFor(model => model.Codigo):
            <span class="sub-info">
                @Html.DisplayFor(model => model.Codigo)
                </span>
        </p>


        <p class="info-style">
            @Html.DisplayNameFor(model => model.PacienteStr):
            <span class="sub-info">
                @Html.DisplayFor(model => model.PacienteStr)
                </span>
        </p>

        <p class="info-style">
            @Html.DisplayNameFor(model => model.Fumador):
            <span class="sub-info">
                @Html.DisplayFor(model => model.FumadorStr)
                </span>
        </p>

        <p class="info-style">
            @Html.DisplayNameFor(model => model.BebeAlcohol):
            <span class="sub-info">
                @Html.DisplayFor(model => model.BebeAlcoholStr)
                </span>
        </p>

        <p class="info-style">
            @Html.DisplayNameFor(model => model.EstadoCivil):
            <span class="sub-info">
                @Html.DisplayFor(model => model.EstadoCivil)
                </span>
        </p>
    </div>
    <div class="col-md-5">
        <p class="info-style">
            @Html.DisplayNameFor(model => model.TuvoHijo):
            <span class="sub-info">
                @Html.DisplayFor(model => model.TuvoHijoStr)
            </span>
        </p>

        <p class="info-style">
            @Html.DisplayNameFor(model => model.CantidadHijo):
            <span class="sub-info">
