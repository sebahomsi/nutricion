@model NutricionWeb.Models.ComidaDetalle.ComidaDetalleABMViewModel

@{
    ViewBag.Title = "Create";
}

<div class="titulo-ABM">
    <h4 class="create-h4">Nueva Comida</h4>
</div>

<!--Modal -->
<div class="modal fade" id="modal-opciones" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            @*Parte de arriba del modal*@
            <div class="modal-header">
                <div align="right">
                    <button type="button" class=" btn btn-danger" data-dismiss="modal" aria-hidden="true">&times;</button>
                </div>
                <br>
                <div class="jumbotron titulo-ABM" style="margin-bottom:5px">
                    <h2>Seleccionar Opcion</h2>
                </div>
            </div>
            @*Cuerpo del modal*@
            <div class="modal-body">
                <div class="form" style="height:382px">
                    <div class="form-group navbar-right">
                        <div class="col-md-4" style="width: 310px">
                            <input type="text" class="form-control " id="txt-BuscarOpcion" placeholder="Ingrese una cadena...">
                        </div>
                        <div class="col-md-2" align="left">
                            <div id="btn-BuscarOpcion" class="btn btn-default ">Buscar</div>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div id="partialFindOpcion"></div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" id="cancelar-opcion" class="btn btn-primary-custom" data-dismiss="modal" aria-hidden="true">Cancelar</button>
            </div>
        </div>
    </div>
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.OpcionId)
        @Html.HiddenFor(model => model.ComidaId)


        <div class="form-group">
            @Html.LabelFor(model => model.Comentario, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Comentario, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Comentario, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="form-group">
            @Html.LabelFor(model => model.OpcionStr, new { @class = "control-label col-md-2" })
            <div class="col-md-4" style="width: 310px">
                @Html.EditorFor(model => model.OpcionStr, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                @Html.ValidationMessageFor(model => model.OpcionStr, "", new { @class = "text-danger" })
            </div>
            <div class="col-md-2" align="left">
                <div id="btn-Opcion" class="btn btn-default" type="button" data-toggle="modal" data-target="#modal-opciones" value="Modal BuscarOpciones" title="Seleccionar opcion">...</div>
            </div>
        </div>





        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Aceptar" class="btn btn-success" />
                @Html.ActionLink("Volver", "Details", "Comida", new { id = Model.ComidaId}, new { @class = "btn btn-default"})

            </div>
        </div>
    </div>
}

<div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

    <script type="text/javascript">

        $(function () {

            $("#btn-Opcion").click(function() {
                    listaOpcion();
                }
            );

            $("#btn-BuscarOpcion").click(() => {
                listaOpcion();
            });


            function listaOpcion() {
                $("#partialFindOpcion").empty();

                $.get('@Html.Raw(Url.Action("BuscarOpcion", "ComidaDetalle"))',
                    {
                        cadenaBuscar: $("#txt-BuscarOpcion").val()
                    },
                    function (listaOpcion) {
                        $("#partialFindOpcion").append(listaOpcion);
                    });
            }



            $(document).on("click",
                "#seleccionar-opcion",
                function() {

                    var url = '@Html.Raw(Url.Action("TraerOpcion", "ComidaDetalle"))';

                    $.get(url,
                        { opcionId: $(this).attr("name") },
                        function(opcion) {
                            $('#OpcionStr').val(opcion.Descripcion);
                            $('#OpcionId').val(opcion.Id);
                            $('#cancelar-opcion').trigger("click");
                        });
                });


        });


    </script>
}