@model NutricionWeb.Models.Opcion.OpcionViewModel

@{
    ViewBag.Title = "Details";
}


<div class="titulo-ABM">
    <h4 class="detail-plan-h4">Detalles del Plan - @Model.ComidaStr: @Model.Descripcion</h4>
</div>

<div class="row">
    <hr />
    <div class="col-md-7" style="margin-left: 10px;">
        <p class="info-style">
            @Html.DisplayNameFor(model => model.Codigo):
            <span class="sub-info">

                @Html.DisplayFor(model => model.Codigo)
            </span>

        </p>

        <p class="info-style">
            @Html.DisplayNameFor(model => model.Descripcion):
            <span class="sub-info">

                @Html.DisplayFor(model => model.Descripcion)
            </span>

        </p>

        <p class="info-style">
            @Html.DisplayNameFor(model => model.ComidaStr):
            <span class="sub-info">
                @Html.DisplayFor(model => model.ComidaStr)
            </span>

        </p>


    </div>

</div>
<p style="margin-left: 10px;">
    @Html.ActionLink("Nuevo Detalle", "Create", "OpcionDetalle", new { opcionId = Model.Id }, new { @class = "btn btn-primary" })

    @Html.ActionLink("Volver a la Comida", "Details", "Comida", new { id = Model.ComidaId }, new { @class = "btn btn-default" })
</p>

<hr />

<div class="titulo-ABM">
    <h4 class="detail-h4">Detalles</h4>
</div>

<table class="table">
    <tr class="cabecera-tabla">
        <th>
            @Html.DisplayNameFor(model => model.OpcionDetalles.FirstOrDefault().Codigo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OpcionDetalles.FirstOrDefault().AlimentoStr)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OpcionDetalles.FirstOrDefault().CantidadMostrar)
        </th>


        <th></th>
    </tr>

    @foreach (var item in Model.OpcionDetalles)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Codigo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AlimentoStr)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CantidadMostrar)
            </td>


            <td align="right">
                @Html.ActionLink("Eliminar", "Delete", "OpcionDetalle", new {opcionId = Model.Id, detalleId = item.Id }, new { @class = "btn btn-danger" })
            </td>
        </tr>
    }

</table>