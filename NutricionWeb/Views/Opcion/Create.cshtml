@model NutricionWeb.Models.Opcion.OpcionABMViewModel

@{
    ViewBag.Title = "Receta";
}


<!--Modal -->
<div class="modal fade" id="modal-subgrupos" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            @*Parte de arriba del modal*@
            <div class="modal-header">
                <div align="right">
                    <button type="button" class=" btn btn-danger" data-dismiss="modal" aria-hidden="true">&times;</button>
                </div>
                <br>
                <div class="jumbotron titulo-ABM" style="margin-bottom:5px">
                    <h2>Seleccionar SubGrupos</h2>
                </div>
            </div>
            @*Cuerpo del modal*@
            <div class="modal-body">
                <div class="form" style="height:382px">
                    <div class="form-group navbar-right">
                        <div class="col-md-4" style="width: 310px">
                            <input type="text" class="form-control " id="txt-BuscarSugGrupo" placeholder="Ingrese una cadena...">
                        </div>
                        <div class="col-md-2" align="left">
                            <div id="btn-BuscarSubGrupo" class="btn btn-default ">Buscar</div>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div id="partialFindSubGrupos"></div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" id="cancelar-subgrupo" class="btn btn-primary-custom" data-dismiss="modal" aria-hidden="true">Cerrar</button>
            </div>
        </div>
    </div>
</div>

<div class="titulo-ABM">
    <h4 class="create-h4">Nueva Receta</h4>
</div>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })


        <div class="form-group">
            @Html.LabelFor(model => model.Descripcion, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Descripcion, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Descripcion, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-12" align="left">
                <div id="btn-SubGrupo" class="btn btn-primary-custom" type="button" data-toggle="modal" data-target="#modal-pacientes" value="Modal BuscarSubGrupos" title="Seleccionar SubGrupo">Agregar SubGrupo</div>
            </div>
            <br/>
            <br/>
            <div class="table-responsive col-md-12">
                <table class="table" id="tablaSubgrupo">
                    <tr class="cabecera-tabla">
                        <th>
                            SubGrupo
                        </th>
                        <th>
                        </th>
                    </tr>
                </table>
            </div>

        </div>


        <div class="form-group">
            <div class="col-md-10">
                <input type="submit" value="Aceptar" class="btn btn-success" />
                @Html.ActionLink("Volver", "Index", new { }, new { @class = "btn btn-default" })
            </div>
        </div>
    </div>
}



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

    <script>
        console.log("");
        var buscarSubGrupos = (cadenaBuscar) => {

            $.get('@Url.Action("BuscarSubGrupos", "SubGrupoReceta")',
                { cadenaBuscar: cadenaBuscar },
                (parcial) => {
                    $("#partialFindSubGrupos").empty().append(parcial);
                });
        }

        var verificar = (id) => {
            var a = true;
            $("input[imput]").each((index, element) => {
                if (id == $(element).val()) {
                    a = false;
                    return false;
                }
            });
            return a;
        }

        $(() => {

            $("#btn-SubGrupo").click(() => {
                $("#modal-subgrupos").modal("show");
                buscarSubGrupos("");
            });

            $("#btn-BuscarSubGrupo").click((e) => {
                e.preventDefault();
                var val = $("#txt-BuscarSugGrupo").val();
                buscarSubGrupos(val);
            });


            $(document).on("click",
                "input[seleccionar]",
                (e) => {

                    let boton = $(e.target);
                    let descripcion = boton.attr('descripcion');
                    let id = boton.attr('name');

                    if (verificar(id)) {
                        $("#tablaSubgrupo")
                            .append(
                                `<tr id="sub${id}"> <td> ${descripcion
                                }  <input hidden type="text" name="SubGruposId" value="${id}" imput /> </td>
                                <td> <button subId= "${id
                                }" class="btn btn-danger btn-xs pull-right" quitar-subgrupo>Quitar</button> </td> </tr>`);
                        boton.removeClass("btn-primary-custom").addClass("btn-primary");
                        boton.val("Seleccionado");
                    }
                });


            $(document).on("click",
                "button[quitar-subgrupo]",
                (e) => {
                    e.preventDefault();
                    let boton = $(e.target);
                    var id = boton.attr("subId");
                    $("#sub" + id).remove();
                });
        });

    </script>
}
