@model NutricionWeb.Models.Establecimiento.EstablecimientoViewModel

@{
    ViewBag.Title = "Details";
}
<div class="titulo-ABM">
    <h4 class="detail-h4">Establecimiento</h4>
</div>
<div>
    <hr />
    <div class="row" style="margin-left: 20em;">
        
        <div class="col-md-offset-1 col-md-8">
            <p class="info-style">
                @Html.DisplayNameFor(model => model.Nombre):
                <span class="sub-info">
                    @Html.DisplayFor(model => model.Nombre)
                </span>
            </p>


            <p class="info-style">
                @Html.DisplayNameFor(model => model.Profesional):
                <span class="sub-info">
                    @Html.DisplayFor(model => model.Profesional)
                </span>
            </p>


            <p class="info-style">
                @Html.DisplayNameFor(model => model.Direccion):
                <span class="sub-info">
                    @Html.DisplayFor(model => model.Direccion)
                </span>
            </p>


            <p class="info-style">
                @Html.DisplayNameFor(model => model.Telefono):
                <span class="sub-info">
                    @Html.DisplayFor(model => model.Telefono)
                </span>
            </p>


            <p class="info-style">
                @Html.DisplayNameFor(model => model.Email):
                <span class="sub-info">
                    @Html.DisplayFor(model => model.Email)
                </span>
            </p>

            <p class="info-style">
                @Html.DisplayNameFor(model => model.Horario):
                <span class="sub-info">
                    @Html.DisplayFor(model => model.Horario)
                </span>
            </p>
        </div>

    </div>


    <div align="center">
        <div class="row" style="margin: 0 15em;">
            
            <div class="col-md-offset-1 col-md-4">
                <a href="https://instagram.com/@Model.Instagram" target="_blank">
                    <i class="fab fa-7x fa-instagram " style="color: #89bc94"></i>
                </a>
            </div>
            <div class="col-md-4">
                <a href="https://facebook.com/@Model.Facebook" target="_blank">
                    <i class="fab fa-7x fa-facebook " style="color: #89bc94"></i>
                </a>
            </div>

        </div>

    </div>

</div>
@if (User.IsInRole("Administrador"))
{
    <p>
        @Html.ActionLink("Actualizar", "Edit", new { id = Model.Id }, new { @class = "btn btn-warning" })
        @Html.ActionLink("Volver", "Index", new { }, new { @class = "btn btn-default" })
    </p>
}

