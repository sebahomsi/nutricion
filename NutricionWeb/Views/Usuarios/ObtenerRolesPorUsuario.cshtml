@model NutricionWeb.Models.Seguridad.UsuarioViewModel

@{
    ViewBag.Title = "Roles";
}

<br />
<div class="jumbotron titulo">
    <h2>Lista de Roles del Usuario: @Model.Nombre</h2>
</div>

<div class="row">
    <div class="col-lg-6" align="left">
        <div class="btn-group">
            @Html.ActionLink("Agregar un Rol", "AgregarRol", new { usuarioId = @Model.UsuarioId }, new { @class = "btn btn-primary" })
        </div>
    </div>
</div>
<br />
<div class="table-responsive">
    <table class="table table-hover table-striped">
        <tr class="cabecera-grilla">
            <th>
                @Html.DisplayNameFor(model => model.Roles.FirstOrDefault().Nombre)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model.Roles.OrderBy(x => x.Nombre))
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nombre)
                </td>
                <td>
                    <div align="right">
                        @Html.ActionLink("Eliminar", "EliminarRolDelUsuario", new { usuarioId = @Model.UsuarioId, rolId = item.RolId }, new { @class = "btn btn-danger btn-xs" })
                    </div>
                </td>
            </tr>
        }

    </table>
</div>
<br />
<div class="row">
    <hr />
    <div class="col-lg-12" align="left">
        <div class="btn-group-margin">
            @Html.ActionLink("Volver", "Index", "Usuarios", new { }, new { @class = "btn btn-primary" })
        </div>
    </div>
</div>
