@model IEnumerable<NutricionWeb.Models.Alimento.AlimentoViewModel>

@{
    ViewBag.Title = "Index";
}

<div class="titulo-ABM">
    <h4 class="detail-h4">Lista de Alimentos</h4>
</div>

<p>
    @Html.ActionLink("Nuevo", "Create", new { }, new { @class = "btn btn-primary" })
</p>
<table class="table">
    <tr class="cabecera-tabla">
        <th>
            @Html.DisplayNameFor(model => model.Codigo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Descripcion)
        </th>
        
        <th>
            @Html.DisplayNameFor(model => model.SubGrupoStr)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Eliminado)
        </th>
        
        
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Codigo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Descripcion)
        </td>
        
        <td>
            @Html.DisplayFor(modelItem => item.SubGrupoStr)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EliminadoStr)
        </td>
        
        <td align="right">
            @Html.ActionLink("Actualizar", "Edit", new { id = item.Id }, new { @class = "btn btn-warning" }) 
            @Html.ActionLink("Detalles", "Details", new { id = item.Id }, new { @class = "btn btn-default" }) 
            @if (item.Eliminado)
            {
                @Html.ActionLink("Activar", "Delete", new {id = item.Id}, new {@class = "btn btn-info"})

            }
            else
            {
                @Html.ActionLink("Eliminar", "Delete", new {id = item.Id}, new {@class = "btn btn-danger"})

            }

            @if (!item.TieneMacroNutriente)
            {
                @Html.ActionLink("MacroNutrientes", "Create", "MacroNutriente", new { alimentoId = item.Id }, new { @class = "btn btn-success" })
            }
            else
            {
                @Html.ActionLink("MacroNutrientes", "Edit", "MacroNutriente", new { id = item.MacroNutrienteId }, new { @class = "btn btn-info" })
            }

        </td>
    </tr>
}

</table>
