@model NutricionWeb.Models.Alimento.AlimentoViewModel

@{
    ViewBag.Title = "Details";
}

<div class="titulo-ABM">
    <h4 class="detail-h4">Alimentos</h4>
</div>

<div class="row">
    <hr />
    <div class="col-md-7">
        <p class="info-style">
            @Html.DisplayNameFor(model => model.Codigo):
            <span class="sub-info">

                @Html.DisplayFor(model => model.Codigo)
            </span>

        </p>

        <p class="info-style">
            @Html.DisplayNameFor(model => model.Descripcion):
            <span class="sub-info">

                @Html.DisplayFor(model => model.Descripcion)
            </span>

        </p>

        <p class="info-style">
            @Html.DisplayNameFor(model => model.Eliminado):
            <span class="sub-info">
                @Html.DisplayFor(model => model.EliminadoStr)
            </span>

        </p>
    </div>

    <div class="col-md-5">
        <p class="info-style">
            @Html.DisplayNameFor(model => model.MacroNutriente.HidratosCarbono):
            <span class="sub-info">

                @Html.DisplayFor(model => model.MacroNutriente.HidratosCarbono) gr
            </span>

        </p>

        <p class="info-style">
            @Html.DisplayNameFor(model => model.MacroNutriente.Proteina):
            <span class="sub-info">

                @Html.DisplayFor(model => model.MacroNutriente.Proteina) gr
            </span>

        </p>

        <p class="info-style">
            @Html.DisplayNameFor(model => model.MacroNutriente.Energia):
            <span class="sub-info">
                @Html.DisplayFor(model => model.MacroNutriente.Energia) gr
            </span>

        </p>

        <p class="info-style">
            @Html.DisplayNameFor(model => model.MacroNutriente.Calorias):
            <span class="sub-info">
                @Html.DisplayFor(model => model.MacroNutriente.Calorias) kcal
            </span>

        </p>
    </div>

</div>
<p style="margin-top: 15px; margin-left: 10px">
    @Html.ActionLink("Actualizar", "Edit", new { id = Model.Id }, new { @class = "btn btn-warning" })
    @Html.ActionLink("Volver", "Index", new { }, new { @class = "btn btn-default" })
</p>