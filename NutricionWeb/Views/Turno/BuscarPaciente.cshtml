@using PagedList.Mvc
@model PagedList.IPagedList<NutricionWeb.Models.Paciente.PacienteViewModel>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FirstOrDefault().ApyNom)
        </th>

        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>

            <td>
                @Html.DisplayFor(modelItem => item.ApyNom)
            </td>

            <td>
                <input type="button" id="seleccionar-paciente" name="@item.Id" class="btn btn-primary-custom" value="Seleccionar" />

            </td>
        </tr>
    }

</table>

<div align="center">
    Página @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) de @Model.PageCount
    @Html.PagedListPager(Model, page => Url.Action("BuscarPaciente", "Turno", new { page, cadenaBuscar = ViewBag.FilterValue }), PagedListRenderOptions.EnableUnobtrusiveAjaxReplacing(new AjaxOptions() { HttpMethod = "GET", UpdateTargetId = "partialFindPaciente" }))
</div>