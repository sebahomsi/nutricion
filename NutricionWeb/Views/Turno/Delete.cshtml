@model NutricionWeb.Models.Turno.TurnoViewModel

@{
    ViewBag.Title = "Delete";
}

<div class="titulo-ABM">
    <h4 class="detail-h4">Turno</h4>
</div>

<div class="row">
    <hr />
    <div class="col-md-7">

        <p class="info-style">
            @Html.DisplayNameFor(model => model.PacienteStr):
            <span class="sub-info">

                @Html.DisplayFor(model => model.PacienteStr)
            </span>

        </p>

        <p class="info-style">
            Fecha:
            <span class="sub-info">

                @Html.DisplayFor(model => model.FechaEntradaStr)
            </span>

        </p>

        <p class="info-style">
            Horario:
            <span class="sub-info">
                @Html.DisplayFor(model => model.HorarioEntradaStr) -
                @Html.DisplayFor(model => model.HorarioSalidaStr)

            </span>

        </p>
        <p class="info-style">
            @Html.DisplayNameFor(model => model.Motivo):
            <span class="sub-info">

                @Html.DisplayFor(model => model.Motivo)
            </span>

        </p>
    </div>
</div>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-actions no-color">
        @if (Model.Eliminado)
        {
            <input type="submit" value="Activar" class="btn btn-info" />

        }
        else
        {
            <input type="submit" value="Eliminar" class="btn btn-danger" />

        }
        @Html.ActionLink("Volver", "Index", new { }, new { @class = "btn btn-default" })

    </div>
}
