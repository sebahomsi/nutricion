@model NutricionWeb.Models.Turno.TurnoViewModel

@{
    ViewBag.Title = "Turno";
}

<div class="titulo-ABM">
    <h4 class="detail-h4">Turno</h4>
</div>

<div class="row">
    <hr />
    <div class="col-md-7">

        <p class="info-style">
            @Html.DisplayNameFor(model => model.PacienteStr):
            <span class="sub-info">

                @Html.DisplayFor(model => model.PacienteStr)
            </span>

        </p>

        <p class="info-style">
            Fecha:
            <span class="sub-info">

                @Html.DisplayFor(model => model.FechaEntradaStr)
            </span>

        </p>

        <p class="info-style">
            Horario:
            <span class="sub-info">
                @Html.DisplayFor(model => model.HorarioEntradaStr) -
                @Html.DisplayFor(model => model.HorarioSalidaStr)

            </span>

        </p>
        <p class="info-style">
            @Html.DisplayNameFor(model => model.Motivo):
            <span class="sub-info">

                @Html.DisplayFor(model => model.Motivo)
            </span>

        </p>
    </div>
</div>


<div class="row">
    <div class="col">
        @using (Ajax.BeginForm("DeleteParcial", "Turno", new { }, new AjaxOptions()
        {
            HttpMethod = "POST",
            InsertionMode = InsertionMode.Replace,
            UpdateTargetId = "turnos-Parcial"
        }))
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(x => x.Id)
            @Html.HiddenFor(x => x.PacienteId)
            <div class="form-actions no-color" style="margin-left: 0px;">
                @if (Model.Eliminado)
                {
                    <input type="submit" value="Activar" class="btn btn-info" />

                }
                else
                {
                    <input type="submit" value="Eliminar" class="btn btn-danger" />

                }
                @Ajax.ActionLink("Volver","TurnosParcial","Paciente",new{ id= @Model.PacienteId },new AjaxOptions()
                {
                    HttpMethod = "GET",
                    InsertionMode = InsertionMode.Replace,
                    UpdateTargetId = "turnos-Parcial",

                },new {@class="btn btn-default"})

            </div>
        }
    </div>
</div>

