@using PagedList.Mvc;
@model PagedList.IPagedList<NutricionWeb.Models.Empleado.EmpleadoViewModel>

@{
    ViewBag.Title = "Index";
}

<div class="titulo-ABM">
    <h4 class="detail-h4">Lista de Empleados</h4>
</div>

<p>
    @Html.ActionLink("Nuevo", "Create", new { }, new { @class = "btn btn-primary" })
</p>
<table class="table">
    <tr class="cabecera-tabla">
        <th>
            @Html.DisplayNameFor(model => model.FirstOrDefault().Legajo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstOrDefault().ApyNom)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.FirstOrDefault().Mail)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstOrDefault().Telefono)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstOrDefault().Celular)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.FirstOrDefault().Eliminado)
        </th>

        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Legajo)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.ApyNom)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Mail)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Telefono)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Celular)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Eliminado)
            </td>

            <td>
                @Html.ActionLink("Actualizar", "Edit", new { id = item.Id }, new { @class = "btn btn-warning" }) 
                @Html.ActionLink("Detalles", "Details", new { id = item.Id }, new { @class = "btn btn-default" }) 
                @Html.ActionLink("Eliminar", "Delete", new { id = item.Id }, new { @class = "btn btn-danger" })
            </td>
        </tr>
    }

</table>
