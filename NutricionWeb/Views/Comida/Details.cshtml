@model NutricionWeb.Models.Comida.ComidaViewModel

@{
    ViewBag.Title = "Details";
}

<div class="titulo-ABM">
    <h4 class="detail-plan-h4">Detalles del Plan - @Model.DiaStr: @Model.Descripcion</h4>
</div>

<div class="row">
    <hr />
    <div class="col-md-7" style="margin-left: 10px;">
        <p class="info-style">
            @Html.DisplayNameFor(model => model.Codigo):
            <span class="sub-info">

                @Html.DisplayFor(model => model.Codigo)
            </span>

        </p>

        <p class="info-style">
            @Html.DisplayNameFor(model => model.Descripcion):
            <span class="sub-info">

                @Html.DisplayFor(model => model.Descripcion)
            </span>

        </p>

        <p class="info-style">
            @Html.DisplayNameFor(model => model.DiaStr):
            <span class="sub-info">
                @Html.DisplayFor(model => model.DiaStr)
            </span>

        </p>


    </div>

</div>
<p style="margin-left: 10px;">
    @Html.ActionLink("Nueva Opcion", "Create", "Opcion", new { comidaId = Model.Id }, new { @class = "btn btn-primary" })

    @Html.ActionLink("Volver al Dia", "Details", "Dia", new { id = Model.DiaId }, new { @class = "btn btn-default" })
</p>

<hr />

<div class="titulo-ABM">
    <h4 class="detail-h4">Opciones</h4>
</div>

<table class="table">
    <tr class="cabecera-tabla">
        <th>
            @Html.DisplayNameFor(model => model.Opciones.FirstOrDefault().Codigo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Opciones.FirstOrDefault().Descripcion)
        </th>

        <th></th>
    </tr>

    @foreach (var item in Model.Opciones)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Codigo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descripcion)
            </td>

            <td align="right">
                @Html.ActionLink("Detalles", "Details", "Opcion", new { opcionId = item.Id }, new { @class = "btn btn-default" })
            </td>
        </tr>
    }

</table>