@foreach (var dia in Model.Dias)
{


<h3><p>@dia.Descripcion</p></h3>
    <div class="row row-plan" >

        @foreach (var comida in dia.Comidas)
        {
            <div class="col-md-2">
                <h4><p>@comida.Descripcion</p></h4>

                @foreach (var opcion in comida.Opciones)
                {

                <strong><p>@opcion.Descripcion</p></strong>
                    foreach (var opcionDetalle in opcion.OpcionDetalles)
                    {
                        <p>@opcionDetalle.AlimentoStr @opcionDetalle.CantidadMostrar</p>
                    }
                }
            </div>

        }

    </div>
    <br>

        }
    


    <p>
