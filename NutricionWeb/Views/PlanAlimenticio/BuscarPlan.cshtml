@model IEnumerable<NutricionWeb.Models.PlanAlimenticio.PlanAlimenticioViewModel>


<div class="table-responsive">
    <table class="table">
        <tr class="cabecera-tabla">

            <th>
                @Html.DisplayNameFor(model => model.PacienteStr)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Motivo)
            </th>


            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>

                <td>
                    @Html.DisplayFor(modelItem => item.PacienteStr)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Motivo)
                </td>
 
                <td align="right">
                    <input type="button" id="seleccionar-plan" name="@item.Id" class="btn btn-primary-custom btn-xs" value="Seleccionar" />
                </td>
            </tr>
        }

    </table>
</div>
