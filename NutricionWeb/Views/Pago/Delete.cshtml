@model NutricionWeb.Models.Pago.PagoViewModel

@{
    ViewBag.Title = "Delete";
}

<div class="row">
    <div class="titulo-ABM">
        <h4 class="detail-h4">Pago</h4>
    </div>

    <hr />
    <div class="col-md-7">
        <div class="col-md-8">
            <p class="info-style">
                @Html.DisplayNameFor(model => model.PacienteStr):
                <span class="sub-info">
                    @Html.DisplayFor(model => model.PacienteStr)
                </span>
            </p>


            <p class="info-style">
                @Html.DisplayNameFor(model => model.Fecha):
                <span class="sub-info">
                    @Html.DisplayFor(model => model.FechaStr)
                </span>
            </p>


            <p class="info-style">
                @Html.DisplayNameFor(model => model.Concepto):
                <span class="sub-info">
                    @Html.DisplayFor(model => model.Concepto)
                </span>
            </p>


            <p class="info-style">
                @Html.DisplayNameFor(model => model.Monto):
                <span class="sub-info">
                    @Html.DisplayFor(model => model.Monto)
                </span>
            </p>

        </div>
    </div>
</div>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()

    <div class="form-actions no-color">
        @if (Model.EstaEliminado)
        {
            <input type="submit" value="Activar" class="btn btn-info"/>

        }
        else
        {
            <input type="submit" value="Eliminar" class="btn btn-danger" />

        }
        @Html.ActionLink("Volver", "Index", new { }, new { @class = "btn btn-default" })

    </div>
}
