@using PagedList.Mvc;
@model PagedList.IPagedList<NutricionWeb.Models.Pago.PagoViewModel>

@{
    ViewBag.Title = "Index";
}

<div class="titulo-ABM">
    <h4 class="detail-h4">Lista de Pagos del dia</h4>
</div>
<p>
    @Html.ActionLink("Nuevo", "Create", new { }, new { @class = "btn btn-primary" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FirstOrDefault().Codigo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstOrDefault().PacienteStr)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.FirstOrDefault().Concepto)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstOrDefault().Monto)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstOrDefault().Fecha)
        </th>


        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Codigo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PacienteStr)
            </td>
           
            <td>
                @Html.DisplayFor(modelItem => item.Concepto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Monto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaStr)
            </td>
           
          
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.Id }, new { @class = "btn btn-warning" })
                @Html.ActionLink("Detalles", "Details", new { id = item.Id }, new { @class = "btn btn-default" })
                @if (item.EstaEliminado)
                {
                    @Html.ActionLink("Activar", "Delete", new { id = item.Id }, new { @class = "btn btn-info" })
                }
                else
                {
                    @Html.ActionLink("Eliminar", "Delete", new { id = item.Id }, new { @class = "btn btn-danger" })
                }

            </td>
        </tr>
    }

</table>
<div align="center">
    Página @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) de @Model.PageCount
    @Html.PagedListPager(Model, page => Url.Action("Index", "Turno", new { page, cadenaBuscar = ViewBag.FilterValue }))
</div>
