@model IEnumerable<NutricionWeb.Models.PlanAlimenticio.PlanAlimenticioViewModel>
<br/>

<div class="row">
    <div class="col-lg-6" align="left">
        <div class="btn-group">
            @Ajax.ActionLink("Nuevo", "CreateParcial", "PlanAlimenticio", new { id = (long)ViewBag.PacienteId }, new AjaxOptions()
    {
        HttpMethod = "GET",
        InsertionMode = InsertionMode.Replace,
        UpdateTargetId = "planesAlimenticios-Parcial",

    }, new { @class = "btn btn-primary-custom" })
        </div>
    </div>
</div>

<br/>

<div class="table-responsive">
    <table class="table">
        <tr class="cabecera-tabla">
            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault().Codigo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault().PacienteStr)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault().Motivo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault().Fecha)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault().Eliminado)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Codigo)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.PacienteStr)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Motivo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FechaStr)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.EliminadoStr)
                </td>
                <td align="right">
                    @Html.ActionLink("Actualizar", "Edit", "PlanAlimenticio", new { id = item.Id }, new { @class = "btn btn-warning" })
                    @Html.ActionLink("Detalles", "Details", "PlanAlimenticio", new { id = item.Id }, new { @class = "btn btn-default" })
                    @if (item.Eliminado)
                    {
                        @Html.ActionLink("Activar", "Delete", "PlanAlimenticio", new { id = item.Id }, new { @class = "btn btn-info" })

                    }
                    else
                    {
                        @Html.ActionLink("Eliminar", "Delete", "PlanAlimenticio", new { id = item.Id }, new { @class = "btn btn-danger" })

                    }
                    @Html.ActionLink("Ver Plan", "ExportarPlan", "PlanAlimenticio", new { id = item.Id }, new { @class = "btn btn-info" })

                </td>
            </tr>
        }

    </table>
</div>

