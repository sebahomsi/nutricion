@using PagedList.Mvc;
@model PagedList.IPagedList<NutricionWeb.Models.Paciente.PacienteViewModel>

@{
    ViewBag.Title = "Index";
}

<div class="titulo-ABM">
    <h4 class="detail-h4">Lista de Pacientes</h4>
</div>

<p>
    @Html.ActionLink("Nuevo", "Create",new { }, new { @class = "btn btn-primary"})
</p>
<table class="table">
    <tr class="cabecera-tabla">
        <th>
            @Html.DisplayNameFor(model => model.FirstOrDefault().Codigo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstOrDefault().ApyNom)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstOrDefault().Mail)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstOrDefault().Telefono)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstOrDefault().Celular)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstOrDefault().Estado)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.FirstOrDefault().EliminadoStr)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Codigo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ApyNom)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Mail)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telefono)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Celular)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EstadoStr)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.EliminadoStr)
            </td>
            <td align="right">
                @Html.ActionLink("Actualizar", "Edit", new {id = item.Id}, new {@class = "btn btn-warning"})
                @Html.ActionLink("Detalles", "Details", new {id = item.Id}, new {@class = "btn btn-default"})
                @if (item.Eliminado)
                {
                    @Html.ActionLink("Activar", "Delete", new {id = item.Id}, new {@class = "btn btn-info"})

                }
                else
                {
                    @Html.ActionLink("Eliminar", "Delete", new {id = item.Id}, new {@class = "btn btn-danger"})

                }
            </td>
        </tr>
    }

</table>
