@model IEnumerable<NutricionWeb.Models.Alimento.AlimentoViewModel>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Descripcion)
        </th>
        
        <th>
            @Html.DisplayNameFor(model => model.SubGrupoStr)
        </th>
        
        <th></th>
    </tr>

@foreach (var item in Model.OrderBy(model => model.Descripcion)) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Descripcion)
        </td>
        
        <td>
            @Html.DisplayFor(modelItem => item.SubGrupoStr)
        </td>
        
        <td>
            <input type="button" id="seleccionar-alimento" name="@item.Id" class="btn btn-primary-custom" value="Seleccionar" />
        </td>
    </tr>
}

</table>
