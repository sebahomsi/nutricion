@model NutricionWeb.Models.Dia.DiaViewModel

@{
    ViewBag.Title = "Dia";
}

<div class="titulo-ABM">
    <h4 class="detail-plan-h4">Detalles del Plan - Dia: @Model.Descripcion</h4>
</div>

<div class="row">
    <hr />
    <div class="col-md-7" style="margin-left: 10px;">
        

        <p class="info-style">
            @Html.DisplayNameFor(model => model.Descripcion):
            <span class="sub-info">

                @Html.DisplayFor(model => model.Descripcion)
            </span>

        </p>

        <p class="info-style">
            @Html.DisplayNameFor(model => model.PlanAlimenticioStr):
            <span class="sub-info">
                @Html.DisplayFor(model => model.PlanAlimenticioStr)
            </span>

        </p>


    </div>

</div>
<p style="margin-left: 10px;">
    @Html.ActionLink("Volver al Plan", "Details", "PlanAlimenticio", new { id = Model.PlanAlimenticioId }, new { @class = "btn btn-default" })
</p>

<hr />

<div class="titulo-ABM">
    <h4 class="detail-h4">Comidas</h4>
</div>

<table class="table">
    <tr class="cabecera-tabla">
        <th>
            @Html.DisplayNameFor(model => model.Comidas.FirstOrDefault().Descripcion)
        </th>

        <th></th>
    </tr>

    @foreach (var item in Model.Comidas)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Descripcion)
            </td>

            <td align="right">
                @Html.ActionLink("Detalles", "Details", "Comida", new { id = item.Id }, new { @class = "btn btn-default" })
            </td>
        </tr>
    }

</table>