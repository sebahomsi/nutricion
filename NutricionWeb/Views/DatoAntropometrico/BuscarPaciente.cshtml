@using PagedList.Mvc
@model PagedList.IPagedList<NutricionWeb.Models.Paciente.PacienteViewModel>


<div class="table-responsive">
    <table class="table">
        <tr class="cabecera-tabla">

            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault().Dni)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault().ApyNom)
            </th>

            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>

                <td>
                    @Html.DisplayFor(modelItem => item.Dni)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.ApyNom)
                </td>

                <td align="right">
                    <input type="button" id="seleccionar-paciente" name="@item.Id" class="btn btn-primary-custom btn-xs" value="Seleccionar" />
                </td>
            </tr>
        }

    </table>
</div>

<div align="center">
    Página @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) de @Model.PageCount
    @Html.PagedListPager(Model, page => Url.Action("BuscarPaciente", "DatoAntropometrico", new { page, cadenaBuscar = ViewBag.FilterValue }), PagedListRenderOptions.EnableUnobtrusiveAjaxReplacing(new AjaxOptions() { HttpMethod = "GET", UpdateTargetId = "partialFindPaciente" }))
</div>