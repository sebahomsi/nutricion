@model IEnumerable<NutricionWeb.Models.DatoAntropometrico.DatoAntropometricoViewModel>

@{
    ViewBag.Title = "Index";
}

<div class="titulo-ABM">
    <h4 class="detail-h4">Datos Antropométricos</h4>
</div>

<p>
    @Html.ActionLink("Nuevo", "Create", new { }, new { @class = "btn btn-primary" })
</p>
<table class="table">
    <tr class="cabecera-tabla">
        <th>
            @Html.DisplayNameFor(model => model.Codigo)
        </th>
        
        <th>
            @Html.DisplayNameFor(model => model.PacienteStr)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Peso)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Altura)
        </th>
        
        <th>
            @Html.DisplayNameFor(model => model.FechaMedicion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MasaGrasa)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MasaCorporal)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Eliminado)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Codigo)
        </td>
        
        <td>
            @Html.DisplayFor(modelItem => item.PacienteStr)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Peso)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Altura)
        </td>
        
        <td>
            @Html.DisplayFor(modelItem => item.FechaMedicion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MasaGrasa)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MasaCorporal)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EliminadoStr)
        </td>
        <td>
            @Html.ActionLink("Actualizar", "Edit", new { id = item.Id }, new { @class = "btn btn-warning" }) 
            @Html.ActionLink("Detalles", "Details", new { id = item.Id }, new { @class = "btn btn-default" }) 
            @Html.ActionLink("Eliminar", "Delete", new { id = item.Id }, new { @class = "btn btn-danger" })
        </td>
    </tr>
}

</table>
