@model NutricionWeb.Models.ObservacionPatologia.ObservacionPatologiaABMViewModel

@{
    ViewBag.Title = "Create";
}

<div class="titulo-ABM">
    <h4 class="create-h4">Nuevo Registro</h4>
</div>

<!--Modal -->
<div class="modal fade" id="modal-patologias" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            @*Parte de arriba del modal*@
            <div class="modal-header">
                <div align="right">
                    <button type="button" class=" btn btn-danger" data-dismiss="modal" aria-hidden="true">&times;</button>
                </div>
                <br>
                <div class="jumbotron titulo-ABM" style="margin-bottom:5px">
                    <h2>Seleccionar Patologia</h2>
                </div>
            </div>
            @*Cuerpo del modal*@
            <div class="modal-body">
                <div class="form" style="height:382px">
                    <div class="form-group navbar-right">
                        <div class="col-md-4" style="width: 310px">
                            <input type="text" class="form-control " id="txt-BuscarPatologia" placeholder="Ingrese una cadena...">
                        </div>
                        <div class="col-md-2" align="left">
                            <div id="btn-BuscarPatologia" class="btn btn-default ">Buscar</div>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div id="partialFindPatologia"></div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" id="cancelar-patologia" class="btn btn-primary" data-dismiss="modal" aria-hidden="true">Cancelar</button>
            </div>
        </div>
    </div>
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4 style="margin-left: 17%;">Complete los campos con los datos solicitados.</h4>

        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.ObservacionId)
        @Html.HiddenFor(model => model.PatologiaId)


        <div class="form-group">
            @Html.LabelFor(model => model.PatologiaStr, new { @class = "control-label col-md-2" })
            <div class="col-md-4" style="width: 310px">
                @Html.EditorFor(model => model.PatologiaStr, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                @Html.ValidationMessageFor(model => model.PatologiaStr, "", new { @class = "text-danger" })
            </div>
            <div class="col-md-2" align="left">
                <div id="btn-Patologia" class="btn btn-default" type="button" data-toggle="modal" data-target="#modal-patologias" value="Modal BuscarPatologias" title="Seleccionar patologia">...</div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Aceptar" class="btn btn-success" />
                @Html.ActionLink("Volver", "Details", "Observacion", new { id = Model.ObservacionId }, new { @class = "btn btn-default" })
            </div>
        </div>
    </div>
}



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

    <script type="text/javascript">

        $(function () {

            $("#btn-Patologia").click(function() {
                    listaPatologia();
                }
            );

            $("#btn-BuscarPatologia").click(() => {
                listaPatologia();
            });


            function listaPatologia() {
                $("#partialFindPatologia").empty();

                $.get('@Html.Raw(Url.Action("BuscarPatologia", "ObservacionPatologia"))',
                    {
                        cadenaBuscar: $("#txt-BuscarPatologia").val()
                    },
                    function (listaPatologia) {
                        $("#partialFindPatologia").append(listaPatologia);
                    });
            }



            $(document).on("click",
                "#seleccionar-patologia",
                function() {

                    var url = '@Html.Raw(Url.Action("TraerPatologia", "ObservacionPatologia"))';

                    $.get(url,
                        { patologiaId: $(this).attr("name") },
                        function(patologia) {

                            $('#PatologiaStr').val(patologia.Descripcion);
                            $('#PatologiaId').val(patologia.Id);
                            $('#cancelar-patologia').trigger("click");
                        });
                });


        });


    </script>
}
